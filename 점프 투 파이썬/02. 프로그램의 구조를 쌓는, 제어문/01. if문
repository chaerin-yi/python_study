# if문
money = True
if money:
    print("택시 타고 가라")
else:
    print("걸어서 가라")
    
money = True
if money:
    print("택시를")
    print("타고")
    print("가라")

# 들여쓰기가 굉장히 중요함

# 비교연산자
x = 3
y = 2

print(x > y)
print(x == y)
print(x != y)

money = 2000
if money >= 3000:
    print("택시 타고 가라")
else:
    print("걸어서 가라")
    
    
# and, or, not
money = 2000
card = True
if money>=3000 or card:
    print("택시")
else:
    print("걸어")    
    
# x in s, not in s
print(1 in [1,2,3])    
print(1 not in [1,2,3])
print('a' in ('a','b','c'))
print('j' in 'python')

pocket = ['paper', 'cellphone', 'money']
if 'money' in pocket:
    print("택시를 타라")
else :
    print("걸어가라")    
    
# 다양한 조건을 판단하는 elif
pocket = ['paper', 'handphone']
card = True
if 'money' in pocket:
    print("택시를 타고가라")
elif card:
    print("택시를 타고 가라")
else:
    print("걸어가")


score = 70
if score >= 60:
    print("success")
else:
    print("failure")
 
    
    
    
