a = [1,2,3]
print(a)
print(a[0]) # a의 첫 번째 요솟값
print(a[0] + a[2]) # 리스트의 첫번째 요소a[2]와 세번째 요소인 a[2]의 값을 더한 것

a = [1,2,3,['a','b','c']]
print(a[-1])
print(a[3])
# -1은 a의 맨 뒤에 있는 요소, a[3]과 같은 요소이기 때문에 같은 값을 출력함

print(a[-1][0]) # a[-1]에 있는 요소의 첫번째 요소를 말함


# 리스트 슬라이싱
a = [1,2,3,4,5]
print(a[0:2])

a = "12345"
print(a[0:2])

a = [1,2,3,4,5]
b = a[:2]
c = a[2:]

print(b)
print(c)

# 리스트 더하기
a = [1,2,3]
b = [4,5,6]
print(a+b)

# 리스트 반복하기
a = [1,2,3]
print(a * 3)

# 리스트 길이구하기
a = [1,2,3]
print(len(a))

# 리스트에서 값 수정하기
a = [1,2,3] 
a[2] = 4 # a[2]가 4로 수정되었음.
print(a)

# del 함수 사용해서 리스트 요소 삭제하기
a = [1,2.3]
del a[1]
print(a)

# 슬라이싱 기법으로 한번에 삭제
a = [1,2,3,4,5]
del a[2:]
print(a)

# 리스트에 요소 추가
a = [1,2,3]
a.append(4)
print(a)
a.append([5,6])
print(a)

# 리스트 정렬
a = [1,3,4,2]
a.sort()
print(a)

# 리스트 뒤집기
a = ['a', 'c', 'b']
a.reverse()
print(a)

# 위치 반환
a = [1,2,3]
print(a.index(3))

# 리스트에 요소 삽입
a = [1,2,3]
a.insert(0,4) # a[0]번째 자리에 값 4를 삽입하라는 뜻
print(a)

# 리스트 요소 제거
a = [1,2,3,1,2,3]
a.remove(3) # 3이라는 값을 3개 가지고 있을 경우 첫번째 3만 제거됨
print(a) 

# 리스트 요소 끄집어내기
a = [1,2,3]
a.pop() # a 리스트에서 3을 끄집어내고 최종적으로 [1,2]만 남음
print(a)

# 리스트에 포함된 요소 X의 개수 세기
a = [1,2,3,1]
print(a.count(1))

# 리스트 확장
a = [1,2,3]
a.extend([4,5])
print(a)

b = [6,7]
a.extend(b)
print(a)

# a.extend([4,5])는 a += [4,5]와 동일
